    <groupId>xyz.liuw</groupId>
    <artifactId>autumn</artifactId>
    <version>1.0.0-SNAPSHOT</version>

    <properties>
        <java.version>1.8</java.version>
        <flexmark.version>0.34.48</flexmark.version>
    </properties>

    <dependencies>
        <!-- Spring -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
